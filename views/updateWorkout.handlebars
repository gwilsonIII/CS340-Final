<form action="/updateReturn">
   <fieldset>
		<legend>Update the workout</legend>
		<label>Name:</label>
			<input type="text" name="name" value="{{results.name}}" required /><br>
		<label>Reps: </label>
			<input type="number" name="reps" min="0" value="{{results.reps}}"/><br>
		<label>Weight: </label>
			<input type="number" name="weight" min="0" value="{{results.weight}}"/><br>
		<label>Date: </label>
			<input type="date" name="date" value="{{results.date}}"/><br>
		<label>Pounds? </label>
			{{#if results.lbs}}
				<input type="checkbox" name="lbs" id="lbs" checked><br>
			{{else}}
				<input type="checkbox" name="lbs" id="lbs"><br>
			{{/if}}
		<input type="hidden" name="id" value={{results.id}}>
		<br> <input type="submit" name="updateWorkout" value="Update" id="updateWorkout"/>
	</fieldset>
</form>