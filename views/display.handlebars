<!––Form for new exercise entry––> 
<form id="addWorkout">
	<fieldset>
		<legend>Enter a new workout</legend>
		<label>Name:</label>
			<input type="text" name="name" required /><br>
		<label>Reps: </label>
			<input type="number" name="reps" min="0" /><br>
		<label>Weight: </label>
			<input type="number" name="weight" min="0" /><br>
		<label>Date: </label>
			<input type="date" name="date" /><br>
		<label>Pounds? </label>
			<input type="checkbox" name="lbs" /><br>
	   <br> <input type="submit" name="submitWorkout" id="submitWorkout"/>
	</fieldset>
</form>


<!––Table displays current workouts from db table––> 
<table border="1" id="workoutTable">
	<thead>
		<tr>
			<th>Name</th>
			<th>Reps</th>
			<th>Weight</th>
			<th>Date</th>
			<th>Pounds</th>
		</tr>
	</thead>
	<tbody>
	{{#if results}}
	{{#each results}}     
		<tr>
			<td>{{ this.name }}</td>
			<td>{{ this.reps }}</td>
			<td>{{ this.weight }}</td>                            
			<td>{{ this.date }}</td>
			<td>{{ this.lbs }}</td>
			
			<td><a href="/updateGet?id={{this.id}}"><input type="button" value="Update"></a></td>
            <td>
                <input type="button" name="delete" value="Delete" onClick="deleteData('dataTable',{{this.id}})">
                <input type="hidden" id="delete{{this.id}}">
            </td>
		</tr>
	{{/each}}
	{{/if}}
	</tbody>
</table>
